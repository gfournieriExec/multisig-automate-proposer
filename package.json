{
    "name": "rlc-multichain-safe-integration",
    "version": "1.0.0",
    "description": "Production-ready Safe multisig integration for RLC Multichain Bridge with comprehensive error handling, logging, and validation",
    "main": "dist/safe/index.js",
    "types": "dist/safe/index.d.ts",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "propose-tx": "ts-node safe/simple-propose-transaction.ts",
        "list-pending": "ts-node safe/list-pending.ts",
        "bridge-config": "ts-node safe/bridge-config.ts",
        "execute-tx": "ts-node safe/transaction-executor.ts",
        "execute-tx-example": "ts-node safe/transaction-executor-example.ts",
        "test-nonce": "ts-node safe/test-nonce-management.ts",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "build:action": "tsc && cp -r dist/* ./",
        "dev": "ts-node-dev --respawn --transpile-only",
        "start": "node dist/safe/transaction-executor.js",
        "format": "prettier --write \"**/*.{ts,js,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
        "lint": "eslint \"safe/**/*.ts\" \"action/**/*.ts\" --max-warnings 0",
        "lint:fix": "eslint \"safe/**/*.ts\" \"action/**/*.ts\" --fix",
        "typecheck": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "validate": "npm run typecheck && npm run lint && npm run format:check",
        "prepare": "npm run build",
        "clean": "rm -rf dist/ logs/ coverage/"
    },
    "keywords": [
        "safe",
        "multisig",
        "ethereum",
        "foundry",
        "typescript",
        "blockchain",
        "defi",
        "transaction-automation"
    ],
    "author": {
        "name": "iExec Team",
        "email": "support@iex.ec",
        "url": "https://iex.ec"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iExecBlockchainComputing/multisig-automate-proposer.git"
    },
    "bugs": {
        "url": "https://github.com/iExecBlockchainComputing/multisig-automate-proposer/issues"
    },
    "homepage": "https://github.com/iExecBlockchainComputing/multisig-automate-proposer#readme",
    "files": [
        "dist/",
        "README.md",
        "LICENSE",
        ".env.safe.template"
    ],
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/lodash": "^4.17.20",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^8.37.0",
        "@typescript-eslint/parser": "^8.37.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.5.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@actions/core": "^1.10.0",
        "@actions/github": "^5.1.1",
        "@safe-global/api-kit": "^2.4.0",
        "@safe-global/protocol-kit": "^4.0.0",
        "@safe-global/types-kit": "^3.0.0",
        "dotenv": "^16.0.0",
        "ethers": "^6.0.0",
        "tslib": "^2.8.1"
    },
    "peerDependencies": {
        "foundry": "*"
    },
    "peerDependenciesMeta": {
        "foundry": {
            "optional": true
        }
    }
}
